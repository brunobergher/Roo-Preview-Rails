<main class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-pink-50">
  <!-- Header -->
  <div class="relative overflow-hidden bg-gradient-to-r from-purple-700 via-pink-600 to-red-500 py-16 px-8 text-center">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-4 left-1/4 text-8xl rotate-12">"</div>
      <div class="absolute bottom-4 right-1/4 text-8xl -rotate-12">"</div>
    </div>
    <h1 class="relative text-5xl font-extrabold text-white mb-3 tracking-tight">Wall of Love</h1>
    <p class="relative text-purple-100 text-lg max-w-xl mx-auto">Real words from real humans. Drop yours below and join the party.</p>
    <a href="/" class="relative inline-block mt-4 text-sm text-white/70 hover:text-white transition-colors">&larr; Back to home</a>
  </div>

  <div class="max-w-5xl mx-auto px-6 py-12">
    <% if notice %>
      <div class="mb-8 bg-emerald-50 border border-emerald-200 text-emerald-700 px-5 py-4 rounded-xl text-sm flex items-center gap-3 animate-fade-in">
        <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
        <%= notice %>
      </div>
    <% end %>

    <!-- Form Card -->
    <div class="mb-14 bg-white rounded-2xl shadow-lg shadow-purple-100/50 border border-purple-100 overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-pink-500 px-6 py-4">
        <h2 class="text-xl font-bold text-white">Share Your Testimonial</h2>
        <p class="text-purple-100 text-sm mt-1">We'd love to hear what you think</p>
      </div>

      <%= form_with model: @testimonial, url: testimonials_path, class: "p-6 space-y-5" do |f| %>
        <% if @testimonial.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl text-sm">
            <p class="font-semibold mb-1">Oops, something's not right:</p>
            <ul class="list-disc ml-5 space-y-1">
              <% @testimonial.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :name, placeholder: "Your name",
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 focus:bg-white focus:border-purple-400 focus:ring-2 focus:ring-purple-100 outline-none transition-all text-gray-800 placeholder-gray-400" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, placeholder: "you@example.com (optional)",
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 focus:bg-white focus:border-purple-400 focus:ring-2 focus:ring-purple-100 outline-none transition-all text-gray-800 placeholder-gray-400" %>
          <p class="text-xs text-gray-400 mt-1">Not displayed publicly</p>
        </div>

        <div>
          <%= f.label :city, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :city, placeholder: "e.g. San Francisco (optional)",
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 focus:bg-white focus:border-purple-400 focus:ring-2 focus:ring-purple-100 outline-none transition-all text-gray-800 placeholder-gray-400" %>
        </div>

        <div>
          <%= f.label :country, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :country, placeholder: "e.g. United States (optional)",
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 focus:bg-white focus:border-purple-400 focus:ring-2 focus:ring-purple-100 outline-none transition-all text-gray-800 placeholder-gray-400" %>
        </div>

        <div>
          <%= f.label :message, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_area :message, rows: 4, placeholder: "What's on your mind?",
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 bg-gray-50 focus:bg-white focus:border-purple-400 focus:ring-2 focus:ring-purple-100 outline-none transition-all text-gray-800 placeholder-gray-400 resize-none" %>
          <p class="text-xs text-gray-400 mt-1">Max 500 characters</p>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Post Testimonial",
              class: "bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-semibold py-3 px-8 rounded-xl shadow-md shadow-purple-200 hover:shadow-lg hover:shadow-purple-300 transition-all cursor-pointer text-sm" %>
        </div>
      <% end %>
    </div>

    <!-- Testimonials Grid -->
    <% if @testimonials.any? %>
      <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">What People Are Saying</h2>
      <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        <% @testimonials.each_with_index do |testimonial, i| %>
          <% colors = [
            "from-purple-500 to-indigo-500",
            "from-pink-500 to-rose-500",
            "from-amber-500 to-orange-500",
            "from-emerald-500 to-teal-500",
            "from-blue-500 to-cyan-500",
            "from-violet-500 to-purple-500"
          ] %>
          <div class="break-inside-avoid bg-white rounded-2xl shadow-md hover:shadow-xl border border-gray-100 hover:border-purple-200 transition-all duration-300 overflow-hidden group">
            <div class="p-6">
              <div class="text-4xl text-purple-200 mb-2 leading-none font-serif">"</div>
              <p class="text-gray-700 leading-relaxed text-sm"><%= testimonial.message %></p>
            </div>
            <div class="bg-gradient-to-r <%= colors[i % colors.length] %> px-6 py-3 flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center text-white font-bold text-sm">
                <%= testimonial.name[0].upcase %>
              </div>
              <div>
                <p class="text-white font-semibold text-sm"><%= testimonial.name %></p>
                <p class="text-white/70 text-xs">
                  <% location = [testimonial.city, testimonial.country].select(&:present?).join(", ") %>
                  <% if location.present? %><%= location %> &middot; <% end %><%= time_ago_in_words(testimonial.created_at) %> ago
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="text-6xl mb-4">ðŸ’¬</div>
        <h3 class="text-xl font-semibold text-gray-600 mb-2">No testimonials yet</h3>
        <p class="text-gray-400">Be the first to share your thoughts!</p>
      </div>
    <% end %>
  </div>
</main>
